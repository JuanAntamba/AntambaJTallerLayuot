<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AntambaJTallerLayuot.MainPage"
             Title="GridLayout">

    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
        <BoxView Color="Red" Grid.Row="0" Grid.Column="0"/>
        <BoxView Color="Blue" Grid.Row="0" Grid.Column="1"/>
        <BoxView Color="Green" Grid.Row="1" Grid.Column="0"/>
        <StackLayout Grid.Row="1" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center">
            <BoxView Color="Yellow" HeightRequest="100" WidthRequest="100"/>
            <Button Text="Ir a StackLayout" Clicked="OnGoToStackClicked"/>
        </StackLayout>
    </Grid>

</ContentPage>
